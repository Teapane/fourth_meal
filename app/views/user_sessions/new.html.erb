<div class="login-form">
  <div class="form-container">
  <h2>Login</h2>
    <%= form_tag user_sessions_path, method: :post do %>
      <div>
        <%= label_tag :username %>
        <%= text_field_tag :username %>
      </div>
      <div>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <div id='login_button'>
        <%= submit_tag "Login", {:class => "btn btn-success"} %>
      </div>
    <% end %>
    
    <%= link_to "<< Back to Menu", items_path %>


  </div>
</div>

    <p class="new-member">Not a Member?</p>
    <p class="new-member"><%= link_to "Create an Account", new_user_path %></p>


