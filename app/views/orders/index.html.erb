<div id="orders">
  <h1>All Orders</h1>
  <% @orders.each do |order| %>
    <% if order.not_empty? %>
    <h3>Order #<%= order.id %></h3>
    <table class="table">
      <thead>
        <tr>
          <th>Dish</th>
          <th>Description</th>
          <th>Price</th>
          <th>Categories</th>
        </tr>
      </thead>
      <% items = order.items %>
      <% items.each do |item| %>
      <tbody>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= print_price(item.price) %></td>
        <td>
        <% item.categories.each do |category| %>
            <%= category.name %>
            <% end %></td>
      </tr>
      </tbody>
      <% end %>
    </table>
    <p>Order Status: <%= order.status %></p>
    <% end %>
  <% end %>
<br />
</div>
