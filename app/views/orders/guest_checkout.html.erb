<%= form_for :order_detail, url: charges_path do |f| %>

<h3>Customer Details</h3>
<fieldset name="billing-details">
	<p>
		<%= f.label(:first_name, "First Name") %>
		<%= f.text_field(:first_name) %>
	</p>

	<p>
		<%= f.label(:last_name, "Last Name") %>
		<%= f.text_field(:last_name) %>
	</p> 

	<p>
		<%= f.label(:email, "Email") %>
		<%= f.text_field(:email) %>
	</p>

	<p>
		<%= f.label(:phone, "Phone Number") %>
		<%= f.text_field(:phone) %>
	</p>

</fieldset>
<table>
	<tr>
		<td>

			<h3>Delivery Address</h3>
			<fieldset id="delivery-address">
				<p>
					<%= f.label(:delivery_street, "Street Address") %>
					<%= f.text_field(:delivery_street) %>
				</p>

				<p> 
					<%= f.label(:delivery_address_2, "Address Line 2") %>
					<%= f.text_field(:delivery_address_2) %>
				</p>

				<p>
					<%= f.label(:delivery_city, "City") %>
					<%= f.text_field(:delivery_city) %>
				</p>

				<p>
					<%= f.label(:delivery_state, "State") %>
					<%= f.text_field(:delivery_state) %>
				</p>

				<p>
					<%= f.label(:delivery_zip, "Zip") %>
					<%= f.text_field(:delivery_zip) %>
				</p>


			</fieldset>

		</td>

		<td>

			<h3>Billing Address</h3>
			<fieldset id="billing-address">
				<p>
					<%= f.label(:billing_street, "Street Address") %>
					<%= f.text_field(:billing_street) %>
				</p>

				<p> 
					<%= f.label(:billing_address_2, "Address Line 2") %>
					<%= f.text_field(:billing_address_2) %>
				</p>

				<p>
					<%= f.label(:billing_city, "City") %>
					<%= f.text_field(:billing_city) %>
				</p>

				<p>
					<%= f.label(:billing_state, "State") %>
					<%= f.text_field(:billing_state) %>
				</p>

				<p>
					<%= f.label(:billing_zip, "Zip") %>
					<%= f.text_field(:billing_zip) %>
				</p>

			</fieldset>
		</td>
	</tr>
</table>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Your Order"
          data-amount="<%= @amount %>"></script>
<% end %>
